<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <PlatformTarget>x64</PlatformTarget>
    <StartupObject>RvmDecklink.App</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <!-- Exclude test files from main project -->
    <Compile Remove="TestDeckLink.cs" />
    <Compile Remove="TestSDI.cs" />
    <Compile Remove="TestSDIProgram.cs" />
  </ItemGroup>

  <ItemGroup>
    <!-- ONNX Runtime with TensorRT support -->
    <PackageReference Include="Microsoft.ML.OnnxRuntime.Gpu" Version="1.19.2" />

    <!-- Image processing -->
    <PackageReference Include="SixLabors.ImageSharp" Version="3.1.5" />

    <!-- For CUDA interop -->
    <PackageReference Include="ManagedCuda-12" Version="12.3.1" />
  </ItemGroup>

  <ItemGroup>
    <!-- DeckLink SDK Interop Assembly (generated by VS COMReference) -->
    <Reference Include="Interop.DeckLinkAPI">
      <HintPath>Interop.DeckLinkAPI.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <!-- Copy ONNX model to output -->
    <None Update="Models\rvm_mobilenetv3_stateless.onnx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="trt_cache\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
