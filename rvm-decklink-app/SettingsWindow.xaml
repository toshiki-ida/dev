<Window x:Class="RvmDecklink.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RVM Settings"
        Height="700" Width="500"
        Background="#1E1E1E"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="400">

    <Window.Resources>
        <!-- Dark theme colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3C3C3C"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#AAAAAA"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>

        <!-- Slider style -->
        <Style TargetType="Slider">
            <Setter Property="Foreground" Value="#007ACC"/>
            <Setter Property="Background" Value="#3C3C3C"/>
        </Style>

        <!-- CheckBox style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Section header style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>

        <!-- Label style -->
        <Style x:Key="ParamLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Value label style -->
        <Style x:Key="ValueLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Button style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E90FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scrollable content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="10">
            <StackPanel>
                <!-- === Basic Settings === -->
                <TextBlock Text="Basic Settings" Style="{StaticResource SectionHeader}"/>
                <Border Background="#2D2D2D" CornerRadius="4" Padding="10" Margin="0,0,0,5">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Downsample Ratio" Style="{StaticResource ParamLabel}"/>
                            <Slider x:Name="DownsampleSlider" Grid.Column="1"
                                    Minimum="0.1" Maximum="1.0"
                                    TickFrequency="0.05" IsSnapToTickEnabled="True"
                                    ValueChanged="OnSliderChanged"/>
                            <TextBlock x:Name="DownsampleValue" Grid.Column="2" Style="{StaticResource ValueLabel}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- === Alpha Settings === -->
                <TextBlock Text="Alpha Settings" Style="{StaticResource SectionHeader}"/>
                <Border Background="#2D2D2D" CornerRadius="4" Padding="10" Margin="0,0,0,5">
                    <StackPanel>
                        <CheckBox x:Name="SoftAlphaCheck" Content="Use Soft Alpha (Gradient)" Margin="0,5"
                                  Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Alpha Threshold" Style="{StaticResource ParamLabel}"/>
                            <Slider x:Name="ThresholdSlider" Grid.Column="1"
                                    Minimum="0" Maximum="1"
                                    TickFrequency="0.05" IsSnapToTickEnabled="True"
                                    ValueChanged="OnSliderChanged"/>
                            <TextBlock x:Name="ThresholdValue" Grid.Column="2" Style="{StaticResource ValueLabel}"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Alpha Contrast" Style="{StaticResource ParamLabel}"/>
                            <Slider x:Name="ContrastSlider" Grid.Column="1"
                                    Minimum="0.1" Maximum="100"
                                    TickFrequency="1" IsSnapToTickEnabled="True"
                                    ValueChanged="OnSliderChanged"/>
                            <TextBlock x:Name="ContrastValue" Grid.Column="2" Style="{StaticResource ValueLabel}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- === Edge Processing === -->
                <TextBlock Text="Edge Processing" Style="{StaticResource SectionHeader}"/>
                <Border Background="#2D2D2D" CornerRadius="4" Padding="10" Margin="0,0,0,5">
                    <StackPanel>
                        <CheckBox x:Name="EdgeRefinementCheck" Content="Edge Refinement" Margin="0,5"
                                  Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Edge Kernel Size" Style="{StaticResource ParamLabel}"/>
                            <Slider x:Name="EdgeKernelSlider" Grid.Column="1"
                                    Minimum="1" Maximum="15"
                                    TickFrequency="2" IsSnapToTickEnabled="True"
                                    ValueChanged="OnSliderChanged"/>
                            <TextBlock x:Name="EdgeKernelValue" Grid.Column="2" Style="{StaticResource ValueLabel}"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Feather Amount" Style="{StaticResource ParamLabel}"/>
                            <Slider x:Name="FeatherSlider" Grid.Column="1"
                                    Minimum="0" Maximum="20"
                                    TickFrequency="1" IsSnapToTickEnabled="True"
                                    ValueChanged="OnSliderChanged"/>
                            <TextBlock x:Name="FeatherValue" Grid.Column="2" Style="{StaticResource ValueLabel}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- === Morphological Operations === -->
                <TextBlock Text="Morphological Operations" Style="{StaticResource SectionHeader}"/>
                <Border Background="#2D2D2D" CornerRadius="4" Padding="10" Margin="0,0,0,5">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Erosion (Shrink)" Style="{StaticResource ParamLabel}"/>
                            <Slider x:Name="ErosionSlider" Grid.Column="1"
                                    Minimum="0" Maximum="10"
                                    TickFrequency="1" IsSnapToTickEnabled="True"
                                    ValueChanged="OnSliderChanged"/>
                            <TextBlock x:Name="ErosionValue" Grid.Column="2" Style="{StaticResource ValueLabel}"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Dilation (Expand)" Style="{StaticResource ParamLabel}"/>
                            <Slider x:Name="DilationSlider" Grid.Column="1"
                                    Minimum="0" Maximum="10"
                                    TickFrequency="1" IsSnapToTickEnabled="True"
                                    ValueChanged="OnSliderChanged"/>
                            <TextBlock x:Name="DilationValue" Grid.Column="2" Style="{StaticResource ValueLabel}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- === Temporal Processing === -->
                <TextBlock Text="Temporal Processing" Style="{StaticResource SectionHeader}"/>
                <Border Background="#2D2D2D" CornerRadius="4" Padding="10" Margin="0,0,0,5">
                    <StackPanel>
                        <CheckBox x:Name="TemporalSmoothingCheck" Content="Temporal Smoothing" Margin="0,5"
                                  Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Smoothing Strength" Style="{StaticResource ParamLabel}"/>
                            <Slider x:Name="SmoothingSlider" Grid.Column="1"
                                    Minimum="0" Maximum="1"
                                    TickFrequency="0.05" IsSnapToTickEnabled="True"
                                    ValueChanged="OnSliderChanged"/>
                            <TextBlock x:Name="SmoothingValue" Grid.Column="2" Style="{StaticResource ValueLabel}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- === Color Correction === -->
                <TextBlock Text="Color Correction" Style="{StaticResource SectionHeader}"/>
                <Border Background="#2D2D2D" CornerRadius="4" Padding="10" Margin="0,0,0,5">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Gamma Correction" Style="{StaticResource ParamLabel}"/>
                            <Slider x:Name="GammaSlider" Grid.Column="1"
                                    Minimum="0.1" Maximum="3"
                                    TickFrequency="0.1" IsSnapToTickEnabled="True"
                                    ValueChanged="OnSliderChanged"/>
                            <TextBlock x:Name="GammaValue" Grid.Column="2" Style="{StaticResource ValueLabel}"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Min Alpha Clamp" Style="{StaticResource ParamLabel}"/>
                            <Slider x:Name="MinAlphaSlider" Grid.Column="1"
                                    Minimum="0" Maximum="0.5"
                                    TickFrequency="0.02" IsSnapToTickEnabled="True"
                                    ValueChanged="OnSliderChanged"/>
                            <TextBlock x:Name="MinAlphaValue" Grid.Column="2" Style="{StaticResource ValueLabel}"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Max Alpha Clamp" Style="{StaticResource ParamLabel}"/>
                            <Slider x:Name="MaxAlphaSlider" Grid.Column="1"
                                    Minimum="0.5" Maximum="1"
                                    TickFrequency="0.02" IsSnapToTickEnabled="True"
                                    ValueChanged="OnSliderChanged"/>
                            <TextBlock x:Name="MaxAlphaValue" Grid.Column="2" Style="{StaticResource ValueLabel}"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom buttons -->
        <Border Grid.Row="1" Background="#2D2D2D" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Presets -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Presets:" Foreground="#AAAAAA" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="PresetCombo" Width="120" SelectionChanged="PresetCombo_SelectionChanged"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Reset" Click="Reset_Click" Margin="0,0,10,0"/>
                    <Button Content="Load" Click="Load_Click" Background="#2E7D32" Margin="0,0,10,0"/>
                    <Button Content="Save" Click="Save_Click" Background="#1565C0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
