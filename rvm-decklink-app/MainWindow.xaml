<Window x:Class="RvmDecklink.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RobustVideoMatting - DeckLink SDI"
        Height="800" Width="1400"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Dark theme colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3C3C3C"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#AAAAAA"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>

        <!-- Button style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E90FF"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#555555"/>
                    <Setter Property="Foreground" Value="#888888"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Label style -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- TextBlock style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D2D" CornerRadius="8" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="RobustVideoMatting - DeckLink SDI" FontSize="24" FontWeight="Bold"/>
                    <TextBlock x:Name="StatusText" Text="Ready" Foreground="#AAAAAA" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="FpsText" Text="FPS: --" FontSize="18" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <TextBlock x:Name="LatencyText" Text="Latency: -- ms" FontSize="14" Foreground="#AAAAAA" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Controls -->
            <Border Grid.Column="0" Background="#2D2D2D" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- DeckLink Input -->
                        <TextBlock Text="SDI Input" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <Label Content="Input Device:" Margin="0,0,0,5"/>
                        <ComboBox x:Name="InputDeviceCombo" Margin="0,0,0,10" SelectionChanged="InputDeviceCombo_SelectionChanged"/>
                        <Button x:Name="RefreshDevicesBtn" Content="Refresh Devices" Click="RefreshDevices_Click" Margin="0,0,0,20"/>

                        <Separator Background="#3C3C3C" Margin="0,0,0,20"/>

                        <!-- DeckLink Output -->
                        <TextBlock Text="SDI Output" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <Label Content="Output Device:" Margin="0,0,0,5"/>
                        <ComboBox x:Name="OutputDeviceCombo" Margin="0,0,0,10"/>
                        <Label Content="Output Format:" Margin="0,0,0,5"/>
                        <ComboBox x:Name="OutputFormatCombo" Margin="0,0,0,20"/>

                        <Separator Background="#3C3C3C" Margin="0,0,0,20"/>

                        <!-- Model Status -->
                        <TextBlock Text="TensorRT Model" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock x:Name="ModelStatusText" Text="Not Loaded" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                        <Button x:Name="LoadModelBtn" Content="Load Model" Click="LoadModel_Click" Margin="0,0,0,20"/>

                        <Separator Background="#3C3C3C" Margin="0,0,0,20"/>

                        <!-- Processing Controls -->
                        <TextBlock Text="Processing" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <Button x:Name="StartBtn" Content="Start Processing" Click="Start_Click"
                                Background="#4CAF50" Margin="0,0,0,10"/>
                        <Button x:Name="StopBtn" Content="Stop Processing" Click="Stop_Click"
                                Background="#F44336" IsEnabled="False" Margin="0,0,0,10"/>
                        <Button x:Name="TestSdiBtn" Content="Test SDI Output" Click="TestSdi_Click"
                                Background="#FF9800" Margin="0,0,0,20"/>

                        <Separator Background="#3C3C3C" Margin="0,0,0,20"/>

                        <!-- Performance Stats -->
                        <TextBlock Text="Performance" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock x:Name="InferenceTimeText" Text="Inference: -- ms" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                        <TextBlock x:Name="PostprocessTimeText" Text="Postprocess: -- ms" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                        <TextBlock x:Name="OutputTimeText" Text="SDI Output: -- ms" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TotalFramesText" Text="Total Frames: 0" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Preview -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Input Preview using D3DImage -->
                <Border Grid.Row="0" Background="#2D2D2D" CornerRadius="8" Margin="0,0,0,5">
                    <Grid x:Name="gridPreview">
                        <TextBlock Text="Input Preview" FontSize="14" Foreground="#888888"
                                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Panel.ZIndex="1"/>
                        <Image x:Name="InputPreview" Stretch="Uniform" Margin="10"/>
                        <!-- No Input Signal Overlay -->
                        <Border x:Name="NoSignalOverlay" Background="#CC000000" Visibility="Collapsed">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="No Input Signal" FontSize="28" FontWeight="Bold" Foreground="#F44336" HorizontalAlignment="Center"/>
                                <TextBlock Text="Check SDI cable connection" FontSize="16" Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Output Preview -->
                <Border Grid.Row="1" Background="#2D2D2D" CornerRadius="8" Margin="0,5,0,0">
                    <Grid>
                        <TextBlock Text="Output Preview (Alpha Mask)" FontSize="14" Foreground="#888888"
                                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
                        <Image x:Name="OutputPreview" Stretch="Uniform" Margin="10"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#2D2D2D" CornerRadius="8" Padding="10" Margin="0,10,0,0">
            <Grid>
                <TextBlock Text="TensorRT + DeckLink SDI - High Performance Video Matting"
                           Foreground="#888888" HorizontalAlignment="Left"/>
                <TextBlock x:Name="GpuInfoText" Text="GPU: --"
                           Foreground="#888888" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>
